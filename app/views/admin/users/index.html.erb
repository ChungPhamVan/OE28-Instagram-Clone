<%= provide :title, t(".users") %>
<%= provide :active_user, t(".users") %>
<%= render "admin/button_admin" %>
<h1 class="text-center"><%= t ".title" %></h1>
<div class="frame-users-admin">
  <div>
    <div class="d-flex justify-content-between align-items-center">
      <%= link_to Settings.disable_link, class: "btn btn-primary new-btn m-0",
        data: {toggle: "modal", target: "#new-user"} do %>
        <%= t ".new_user" %>
      <% end %>
      <%= render partial: "admin/users/new_modal", locals: {resource: @user_hash[:user]} %>
    </div>
  </div>
  <%= render partial: "admin/users/search_form" %>
  <div id="table_user">
    <%= render partial: "admin/users/table", locals: {user_hash: @user_hash} %>
  </div>
</div>
<%= javascript_pack_tag "load_users", "data-turbolinks-track": "reload" %>
