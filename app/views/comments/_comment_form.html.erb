<%= form_for post.comments.build, url: post_comments_path(post),
  html: {id: "form-comment-#{post.id}"},
  remote: true do |f| %>
  <%= f.text_field :content, class: "instagram-card-input",
    id: "content-comment-#{post.id}", placeholder: t(".add_comment") %>
  <%= f.hidden_field :parent_id, value: nil, id: "parent-comment-#{post.id}" %>
  <%= f.submit t(".post"), class: "instagram-card-icon", disabled: true %>
<% end %>
