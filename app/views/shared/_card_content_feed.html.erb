<div class="instagram-card-content comments">
  <% if post.description %>
    <%= render "shared/post_description", post: post %>
  <% end %>
  <hr>
  <% if post.comments.size > Settings.top_comments %>
    <%= link_to t("view_all"), post, class: "view-all" %>
  <% end %>
  <%= render partial: "comments/preview", collection: post.top_comments,
    as: :comment %>
</div>
