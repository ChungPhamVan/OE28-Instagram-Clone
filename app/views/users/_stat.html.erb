<% @user ||= current_user %>
<ul class="profile-stat">
  <li>
    <%= link_to "#" do %>
      <span><%= @user.posts.size %></span> <%= t ".posts"%>
    <% end %>
  </li>
  <li>
    <%= link_to followers_user_path(@user) do %>
      <span id="followers"><%= @user.followers.size %></span> 
      <%= t ".followers" %>
    <% end %>
  </li>
  <li>
    <%= link_to following_user_path(@user) do %>
      <span><%= @user.following.size %></span> 
      <%= t ".following" %>
    <% end %>
  </li>
</ul>
