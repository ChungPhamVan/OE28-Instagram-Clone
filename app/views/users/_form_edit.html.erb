<%= form_for user, url: url_update_user(user), local: true,
  html: {id: "user-form-edit-#{user.id.to_s}", class: "form-horizontal form-edit-user"},
  remote: current_user.admin? do |f| %>
  <div class="form-group row">
    <div class="col-sm-3 col-form-label">
      <%= image_tag display_avatar_image(user), class: "avatar" %>
    </div>
    <div class="col-sm-9">
      <p class="username"><%= user.username %></p>
    </div>
  </div>
  <div class="custom-file form-group row file_field_input">
    <%= f.label t(".avatar_image"), class: "custom-file-label", for: "avatar_image" %>
    <%= f.file_field :avatar_image, class: "custom-file-input form-control",
      id: "user-avatar-image-#{user.id.to_s}",
      accept: Settings.user.valid_image_types.join(",")
    %>
  </div>
  <div class="form-group row">
    <%= f.label t(".name"), class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= f.text_field :name, class: "form-control", id: "user-name-#{user.id.to_s}" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label t(".username"), class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= f.text_field :username, class: "form-control",
        id: "user-username-#{user.id.to_s}" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label t(".website"), class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= f.text_field :website, class: "form-control",
      id: "user-website-#{user.id.to_s}" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label t(".bio"), class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= f.text_area :bio, class: "form-control",
      id: "user-bio-#{user.id.to_s}" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label t(".email"), class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= f.text_field :email, class: "form-control",
      id: "user-email-#{user.id.to_s}" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label t(".phone"), class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= f.text_field :phone, class: "form-control",
      id: "user-phone-#{user.id.to_s}" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label t(".gender"), class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= f.select :gender, options_for_select(arr_gender, gender_user(user)),
        {}, class: "custom-select my-1 mr-sm-2", id: "user-gender-#{user.id.to_s}"
      %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label t(".status"), class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= f.select :status, options_for_select(arr_status, status_account(user)),
        {}, class: "custom-select my-1 mr-sm-2", id: "user-status--#{user.id.to_s}"
      %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-9">
      <%= f.submit t(".submit"), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
