<% provide :title, t(".title") %>
<div class="card signup-form">
  <article class="card-body">
    <%= link_to  t(".login"), login_path, class: "float-right btn btn-outline-primary" %>
    <h4 class="card-title mb-4 mt-1"><%= t ".signup" %></h4>
    <hr>
    <%= form_for @user, url: signup_path do |f| %>
      <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
      <% end %>
      <%= render "shared/error_messages", object: f.object %>
      <div class="form-group">
        <%= f.email_field :email, class: "form-control", placeholder: t(".email") %>
      </div>
      <div class="form-group">
        <%= f.text_field :name, class: "form-control", placeholder: t(".fullname") %>
      </div>
      <div class="form-group">
        <%= f.text_field :username, class: "form-control", placeholder: t(".username") %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: "form-control", placeholder: t(".password") %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: t(".password_confirmation") %>
      </div>
      <%= f.hidden_field :uid %>
      <div class="form-group">
        <%= f.submit t(".signup"), class: "btn btn-primary btn-block" %>
        <div class="row"></div>
      </div>
    <% end %>
    <hr>
    <% unless @user.uid %>
      <p class="text-center">
        <%= t ".or" %>
      </p>
      <p>
        <%= link_to Settings.facebook_auth_path, 
        class: "btn btn-block btn-outline-primary" do %>
          <i class="fa fa-facebook-f"></i>
          <%= t ".login_via_facebook" %>
        <% end %>
      </p>
    <% end %>
  </article>
</div>
