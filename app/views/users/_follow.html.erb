<%= form_for get_relationship(user), html: {id: "user-form-#{user.id.to_s}"},
  remote: true do |f| %>
  <div>
    <%= hidden_field_tag :followed_id, user.id, id: "user-followid-#{user.id.to_s}" %>
  </div>
  <div>
    <%= hidden_field_tag :status, get_status_relationship(user), id: "user-status-#{user.id.to_s}" %>
  </div>
  <%= f.submit t(".follow"), class: "btn btn-primary" %>
<% end %>
