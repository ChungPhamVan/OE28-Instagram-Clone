<%= form_for object, url: like_path(object),
  html: {method: :delete, class: "form_for_like", id: "form-destroy-like-#{object.id}" },
  remote: true do |f| %>
  <%= hidden_field_tag :likeable_id, object.id,
    id: "likeable_id-destroy-like-#{object.id}" %>
  <%= hidden_field_tag :likeable_type, object.class.name,
    id: "likeable_type-destroy-like-#{object.id}" %>
  <%= hidden_field_tag :type_action, Settings.bookmark_like.like,
    id: "type_action-destroy-like-#{object.id}" %>
  <%= button_tag class: "instagram-card-icon button_red" do %>
    <i class="fa fa-heart text-danger transform-scale"></i>
  <% end %>
<% end %>
