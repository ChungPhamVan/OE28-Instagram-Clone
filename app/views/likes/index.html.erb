<% provide :title, @title %>
<% if @likers.any? %>
  <h1 class="text-center"><%= @tips %></h1>
  <section class="people">
    <ul class="people__list">
      <%= render partial: "users/user", collection: @likers, as: :user %>
    </ul>
  </section>
<% else %>
  <h1 class="text-center"><%= @title %></h1>
  <h3 class="text-center"><%= t ".nobody" %></h3>
<% end %>
