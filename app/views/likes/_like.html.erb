<%= form_for current_user.bookmark_likes.build, url: likes_path,
  html: {class: "form_for_like", id: "form-like-#{object.id}"},
  remote: true do |f| %>
  <%= hidden_field_tag :likeable_id, object.id,
    id: "likeable_id-like-#{object.id}" %>
  <%= hidden_field_tag :likeable_type, object.class.name,
    id: "likeable_type-like-#{object.id}" %>
  <%= hidden_field_tag :type_action, Settings.bookmark_like.like,
    id: "type_action-like-#{object.id}" %>
  <%= button_tag class: "instagram-card-icon button_red" do %>
    <i class="fa fa-heart-o transform-scale"></i>
  <% end %>
<% end %>
